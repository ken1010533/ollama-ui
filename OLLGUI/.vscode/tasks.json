    "version": "2.0.0",
    "tasks": [
        {
            "label": "Git Auto Commit",
            "type": "shell",
            "command": "git add -A; git commit -m \"Auto commit: $(Get-Date -Format 'yyyy-MM-dd HH:mm:ss')\"",
            "problemMatcher": [],
            "options": {
                "shell": {
                    "executable": "powershell.exe"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
  }
  